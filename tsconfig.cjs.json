{
    "compilerOptions": {
        /* Visit https://aka.ms/tsconfig.json to read more about this file */
        "target": "ES2020",
        "allowJs": false,
        "module": "commonjs",
        "moduleResolution": "Node10",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "outDir": "./lib/cjs",
        "noEmit": false,
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src"]
}
